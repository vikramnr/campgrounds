<%- include ('../partials/header') %>

    <div class="row">
        <legend style="text-align: center">Edit <%=foundCamp.name%>
        </legend>
        <div style="width: 30%;margin: 25px auto">
            <form action="/campgrounds/<%=foundCamp._id%>?_method=PUT" method="POST" role="form">

                <div class="form-group">
                    <input type="text" name="campname" value="<%=foundCamp.name%>" class="form-control" id="" placeholder="Camp Name">
                </div>
                <div class="form-group">
                    <input type="number" name="cost" class="form-control" id="" value="<%=foundCamp.price%>" placeholder="Price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" name="campimage" value="<%=foundCamp.image%>" class="form-control" id="" placeholder="Image Url">
                </div>
                <div class="form-group">
                    <input type="text" name="campdesc" value="<%=foundCamp.description%>" class="form-control" id="" placeholder="Just a Little bit">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>

                <a href="/" role="button">Go Back</a>

            </form>

        </div>
    </div>
    <%- include ('../partials/footer') %>
