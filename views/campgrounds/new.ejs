<%- include ('../partials/header') %>

    <div class="row">
        <h2 style="text-align: center">New Campground</h2>
        <div style="width: 30% ; margin: 25px auto">
            <form action="/campgrounds" method="POST" role="form">


                <div class="form-group">
                    <input type="text" name="campname" class="form-control" id="" placeholder="Camp Name">
                </div>
                <div class="form-group">
                    <input type="number" name="cost" class="form-control" id="" placeholder="Cost" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" name="campimage" class="form-control" id="" placeholder="Image Url">
                </div>
                <div class="form-group">
                    <input type="text" name="campdesc" class="form-control" id="" placeholder="Just a Little bit">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>

                <a href="/" role="button">Go Back</a>
            </form>
        </div>
    </div>

    <%- include ('../partials/footer') %>
