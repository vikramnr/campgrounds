<% include ../partials/header.ejs%>
        <form action="/campgrounds" method="POST" role="form">
            <legend>Add New Campground</legend>

            <div class="form-group">
                <label for="">Campground Name</label>
                <input type="text" name="campname" class="form-control" id="" placeholder="Camp Name">
                <br>
                
                <label for="">Price</label>
                <input type="number" name="price" class="form-control" id="" placeholder="Price" min="0.01" step="0.01">
                <label for="">Campground Image</label>
                <input type="text" name="campimage" class="form-control" id="" placeholder="Image Url">
                <br>
                <label for="">Campground Description</label>
                <input type="text" name="campdesc" class="form-control" id="" placeholder="Just a Little bit">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>

            <a class="btn btn-default" href="/" role="button">Go Back</a>
            
        </form>
    